  <%@ifeq favicons="true"%>
  <script>
    <%-- Add favicons to external links --%>
    $("a[href^='http']:not([href*='bhgc.org']):not([id*='edit'])").each(function() {
      $(this).css({
        "background": "url(https://www.google.com/s2/favicons?domain=" +
                       this.href + ") left center no-repeat",
        "background-size": "16px",
        "padding-left": "20px"
      });
    });
  </script>
  <%@endif%>
